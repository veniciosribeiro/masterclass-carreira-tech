{
    "name": "techcareer-monorepo",
    "private": true,
    "workspaces": [
        "apps/*"
    ],
    "scripts": {
        "dev:frontend": "npm run dev -w @techcareer/frontend",
        "dev:backend": "npm run dev -w @techcareer/backend",
        "build": "npm run build --workspaces",
        "lint": "npm run lint --workspaces",
        "format": "npm run format --workspaces",
        "test": "npm run test --workspaces",
        "prepare": "husky"
    },
    "devDependencies": {
        "husky": "^9.1.7",
        "lint-staged": "^15.5.2",
        "prettier": "3.8.1",
        "eslint": "^9.39.2"
    }
}